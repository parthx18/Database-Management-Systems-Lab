-- 1. Create Tables
CREATE TABLE DEPARTMENT_X (
    DEPT_ID NUMBER PRIMARY KEY,
    DEPT_NAME VARCHAR2(50)
);

CREATE TABLE FACULTY_X (
    FACULTY_ID NUMBER PRIMARY KEY,
    FACULTY_NAME VARCHAR2(50),
    DEPT_ID NUMBER
);

CREATE TABLE STUDENT_X (
    STUDENT_ID NUMBER PRIMARY KEY,
    NAME VARCHAR2(50),
    DEPT_ID NUMBER,
    ADVISOR_ID NUMBER
);

